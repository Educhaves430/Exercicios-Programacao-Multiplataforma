<Window x:Class="WPFApp5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFApp5"
        mc:Ignorable="d"
        Title="Inserir Notas" Height="150" Width="300" Loaded="MainWindow_Loaded" Closed="MainWindow_Closed">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Nota:" VerticalAlignment="Top"/>
        <TextBox x:Name="tbNotas" HorizontalAlignment="Left" Height="24" Margin="50,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btAdicionar" Content="Adicionar" HorizontalAlignment="Left" Margin="180,10,0,0" VerticalAlignment="Top" Width="80" Click="btAdicionar_Click"/>
        <StatusBar Margin="0,80,0,0" VerticalAlignment="Top" Height="24">
            <StatusBarItem x:Name="sbiMensagem" VerticalAlignment="Top" Height="26" Margin="0,0,0,0" />
        </StatusBar>
    </Grid>
</Window>
