        <TextBlock x:Name="tbListView" HorizontalAlignment="Left" Margin="314,157,0,0" TextWrapping="Wrap" VerticalAlignment="Top" IsEnabled="False"><Run Language="en-gb" Text="ListView"/><Run Text=":"/></TextBlock>
        <TextBlock x:Name="tbTreeView" HorizontalAlignment="Left" Margin="568,157,0,0" TextWrapping="Wrap" VerticalAlignment="Top" IsEnabled="False"><Run Text="Tree"/><Run Language="en-gb" Text="View"/><Run Text=":"/></TextBlock>
        <ListView x:Name="listView" Margin="314,178,264,62">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <TreeView x:Name="treeView" Margin="568,178,26,62"/>
    </Grid>
</Window>
