<Window x:Class="WPFApp4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFApp4"
        mc:Ignorable="d"
        Title="Lista de figuras" Height="422" Width="360">
    <Grid Margin="0,3,10,0" Height="398" VerticalAlignment="Top">
        <Menu VerticalAlignment="Top" Height="32">
            <MenuItem Header="Figuras" Height="27" Width="72" VerticalAlignment="Top">
                <MenuItem Header="Adicionar..." Click="FiguraAdicionar_Click"/>
            </MenuItem>
        </Menu>
        <TextBlock Text="Figuras" Margin="29,87,251,0" VerticalAlignment="Top" Height="25" />
        <ListBox x:Name="lbFiguras" Margin="29,112,173,0" VerticalAlignment="Top" Height="186" SelectionChanged="lbFiguras_SelectionChanged" />
        <StatusBar Margin="0,348,0,0" VerticalAlignment="Top" Height="26">
            <StatusBarItem x:Name="sbDimensoes" VerticalAlignment="Center" Height="26" />
        </StatusBar>
    </Grid>
</Window>
